<!DOCTYPE html>
<html>
  <head>
    <title>
      {% if template_name == 'index' %}
        {{ site_name }}
      {% else %}
        Page: {{ page.title }}
      {% endif %}
    </title>
    <!-- {{template_name}} -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% assign hash = now | date: '%s' %}    
    <link rel="stylesheet" href="{{ 'style.css' | asset_url }}?v={{hash}}">
    <script type="text/javascript" src="{{ 'app.js' | asset_url}}?v={{hash}}"></script>
    <link rel="stylesheet" href="{{pagiii_url}}/custom_css/editor/content_view.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;0,1000;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900;1,1000&family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
      .material-symbols-outlined {
        font-variation-settings:
        'FILL' 0,
        'wght' 400,
        'GRAD' 0,
        'opsz' 48
      }
      .hero {
        background-image: url({{ 'bg-hero.jpg' | asset_url }}) !important;
      }
      .video {
        background-image: url({{ 'video.jpg' | asset_url }}) !important;        
      }
    </style>
  </head>
  <body style="" data-controller="search scroll-reveal menu-scroll" class="bg-gray-100">
    <div data-search-target="searchBar" class="hidden fixed z-50 w-full bg-white">
      <div class="mt-10 ml-12 mr-12 flex mb-10">
        <div class="grow">
          <form action="{{root_url}}/search" method="get">
            <input data-search-target="keyword" type="text" name="q" placeholder="Ketik untuk mencari..." 
              class="w-full border-b-2 text-xl border-red-200 !outline-none"/>
          </form>
        </div>
        <div class="w-5 ml-3">
          <a data-action="click->search#hideSearchBar" class="text-red-400 text-2xl">X</a>
        </div>
      </div>
    </div>    
    {% render 'header', site_name: site_name, root_url: root_url, site: site %}
    
    
    <main style="" class="">
      <section class="hero bg-cover bg-blend-overlay bg-gray-900">
        <div class="container h-full text-white flex flex-wrap items-center lg:h-auto lg:mx-auto lg:pt-32 lg:justify-around lg:items-center">        
          <div class="w-full lg:w-1/2">
            <div data-scroll-reveal-target="item" data-delay="250ms" class="lg:mx-6 reveal">
              <div class="text-5xl font-bold text-center lg:text-left">
                Nikmati Menu Makanan<br/> Kami
              </div>
              <div class="text-center lg:mt-6 lg:text-left">
                Manjakan lidah anda dengan citarasa turun temurun<br/>
                yang melegenda
              </div>
            </div>
          </div>
          <div class="w-full lg:w-1/2">
            <img src="{{ 'piring.png' | asset_url }}" class="right-image lg:mx-6"/>
          </div>
        </div>
      </section>      
        
      {% if template_name == 'index' %}
        <section style="" class="container mx-auto mt-16" data-controller="tab">
          {% include 'feature' %}
          {% include 'about' %}
          {% include 'food_menu' %}
        </section>
        {% include 'video' %}
        <section style="" class="container mx-auto mt-16">
          {% include 'team' %}
          {% include 'testimonials' %}
        </section>
        
      {% endif %}

      {% if template_name == 'pages'%}          
        {{content_for_layout}}          
      {% endif %}

      {% if template_name == 'search'%}          
        {{content_for_layout}}          
      {% endif %}

      {% if template_name == 'page' %}
        <div class="mt-10">
          {{content_for_layout}}
        </div>
      {% endif %}

      <section style="" class="mt-24 pt-14 pb-14 bg-black text-white">
        {% include 'footer' %}
      </section>
    </main>
  </body>
</html>
