<div data-controller="modal">
  <div class="flex flex-wrap mt-28">
    <div class="w-full lg:w-1/2 video">
      <div class="flex items-center justify-center h-full">
        <div data-action="click->modal#showModal" class="animate-bounce text-white bg-orange-300 rounded-full w-24 h-24 cursor-pointer">
          <span class="block material-symbols-outlined text-black !text-8xl">
            play_circle
          </span>
        </div>
      </div>
    </div>

    <div class="w-full h-72 lg:h-auto lg:w-1/2 book text-red-500">
      <div class="flex items-center justify-center h-full">
        <div class="mx-4">
          <div class="text-white text-4xl">
            Reservasi Meja:
          </div>
          <div class="mt-8">
            <a target="_blank" href="https://wa.me/6285295033162">
              <img src="{{ 'wa.png' | asset_url }}"/>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div data-modal-target="modal" class="hidden relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <!--
      Background backdrop, show/hide based on modal state.

      Entering: "ease-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100"
        To: "opacity-0"
    -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-90 transition-opacity"></div>

    <div class="fixed inset-0 z-10 overflow-y-auto">
      <div class="flex min-h-full justify-center lg:p-4 text-center items-center">
        <!--
          Modal panel, show/hide based on modal state.

          Entering: "ease-out duration-300"
            From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            To: "opacity-100 translate-y-0 sm:scale-100"
          Leaving: "ease-in duration-200"
            From: "opacity-100 translate-y-0 sm:scale-100"
            To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        -->
        
        <div class="relative transform overflow-scroll rounded-lg bg-white text-left shadow-xl transition-all lg:w-1/2">
          <div class="text-right mr-4 mt-2">
            <a class="h-8 w-8 border-0 cursor-pointer" data-action="click->modal#hideModal">
              <span class="material-symbols-outlined">close</span>
            </a>
          </div>
          <div class="bg-white px-1 pb-1 pt-1 sm:p-1 sm:pb-1">       
            <div class="flex justify-center items-center">       
              <iframe  class="yt_player_iframe" width="560" height="315" src="https://www.youtube.com/embed/1tEKiXgb8lw?enablejsapi=1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>
